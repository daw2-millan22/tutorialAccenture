<mvc:View
    controllerName="tutorial1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
>
    
    <Page id="page" title="{i18n>title}">
        <content>
            <Button text="{i18n>HelloWorld}" press="onSayHello"></Button>
            <ComboBox id="city-combobox" items="{CitiesModel>/}"  selectedKey="{ToolModel>/cityName}" >
                <core:Item text="{CitiesModel>name}" key="{CitiesModel>name}"/>
            </ComboBox>
            <Button text="{i18n>NavigateToView} 2" press="onNavigateToView2"></Button>
            <Button text="{i18n>NavigateToView} 3" press="onNavigateToView3"></Button>
        </content>
    </Page>
</mvc:View>
