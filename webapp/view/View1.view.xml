<mvc:View
    controllerName="tutorial1.controller.App" 
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
  
    <Page id="page" title="{i18n>title}">
        <content>
             <Button text="Hello World!" press="onSayHello"></Button>
             <ComboBox items="{CitiesModel>/}" selectedKey="{ToolModel>/selectedCity}">
                <core:Item key="{CitiesModel>name}" text="{CitiesModel>name}"></core:Item>
            </ComboBox>
            <ComboBox items="{CitiesModel>/}" selectedKey="{ToolModel>/selectedCity}">
               <core:Item key="{CitiesModel>population}" text="{CitiesModel>population}"></core:Item>
             </ComboBox>
         </content>
    </Page>

</mvc:View>
