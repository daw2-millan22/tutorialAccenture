<mvc:View
    	controllerName="tutorial1.controller.Autorization"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m"
		xmlns:f="sap.f"
		xmlns:layout="sap.ui.layout"
		height="100%">
    <App>
        <f:DynamicPage id="dynamicPageId" headerExpanded="true" showFooter="true">
            <!-- DynamicPage Title -->
            <f:title>
                <f:DynamicPageTitle>
                    <f:heading>
                        <Title text="Header Title"/>
                    </f:heading>
                </f:DynamicPageTitle>
            </f:title>
            <!-- DynamicPage Header -->
            <f:header>
                <f:DynamicPageHeader pinnable="true">
                    <layout:HorizontalLayout allowWrapping="true">
                        <layout:VerticalLayout class="sapUiMediumMarginEnd">
                            <ObjectAttribute title="Location" text="Warehouse A"/>
                            <ObjectAttribute title="Halway" text="23L"/>
                            <ObjectAttribute title="Rack" text="34"/>
                        </layout:VerticalLayout>
                        <layout:VerticalLayout>
                            <ObjectAttribute title="Availability"/>
                            <ObjectStatus text="In Stock" state="Success" />
                        </layout:VerticalLayout>
                    </layout:HorizontalLayout>
                </f:DynamicPageHeader>
            </f:header>
            <f:content>
                <Table id="idProductsTable" sticky="HeaderToolbar,ColumnHeaders" inset="false" items="Proof" class="sapFDynamicPageAlignContent" width="auto">
                    <headerToolbar>
                        <Toolbar>
                            <Title text="Products" level="H2"/>
                            <ToolbarSpacer/>
                            <Button class="myPrimaryBtn" text="{i18n>HelloWorld}" press="onSayHello"/>
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
                            <Text text="Autorizaciones de Tiempos" />
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
                            <Text text="Tipo" />
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
                            <Text text="Fecha / Hora" />
                        </Column>
                        <Column width="auto" hAlign="End">
                            <Text text="Estado" />
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
                            <Text text="Aprobado porstado" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <ObjectIdentifier title="Ricardo MillÃ¡n "/>
                                <Text text="Vacaniones" />
                                <Text text="21/01/2022" />
                                <ObjectStatus text="Aprobado" state="Success" />
                                <Text text="Benito Camelas" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </f:content>
            <!-- DynamicPage Footer -->
            <f:footer>
                <Toolbar>
                    <Button text="{/messagesLength}" />
                    <ToolbarSpacer/>
                    <Button type="Accept" text="Accept"/>
                    <Button type="Reject" text="Reject"/>
                </Toolbar>
            </f:footer>
        </f:DynamicPage>
    </App>    
</mvc:View>