<mvc:View
    	controllerName="tutorial1.controller.Autorization"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:core="sap.ui.core"
		xmlns:layout="sap.ui.layout"
		xmlns="sap.m"
		xmlns:f="sap.f"
		xmlns:fb="sap.ui.comp.filterbar"
		xmlns:vm="sap.ui.comp.variants"
		height="93%">
    <App>
        <f:DynamicPage id="dynamicPageId" headerExpanded="true" showFooter="true">
            <!-- DynamicPage Title -->
            <f:title>
                <f:DynamicPageTitle>
                    <f:heading>
                        <Title text="Header Title"/>
                    </f:heading>
                </f:DynamicPageTitle>
            </f:title>
            <!-- DynamicPage Header -->
            <f:header>
                <f:DynamicPageHeader pinnable="true">
                   	<f:content>
						<fb:FilterBar id="filterbar" reset="onReset" search="onSearch" useToolbar="false" showGoOnFB="false">
							<fb:filterItems>
								<fb:FilterItem name="Autorizaciones de Tiempos" label="Autorizaciones de Tiempos">
									<fb:control>
										<Select
										id="slAutorizacionesTiempos"
										forceSelection="true"
										change="onSelectChange"
										items="{
                                                    path: '/ProductNames'
                                                }">
										<core:Item key="{key}" text="{name}"/>
										</Select>
									</fb:control>				
								</fb:FilterItem>								
								<fb:FilterItem name="Tipo" label="Tipo">
									<fb:control>
										<Select
										id="slTipo"
										change="onSelectChange"
										forceSelection="true"
										items="{
                                                    path: '/ProductCategories'
                                                 }">
										<core:Item key="{key}" text="{name}"/>
										</Select>
									</fb:control>				
								</fb:FilterItem>				
								<fb:FilterItem name="FechaHora" label="FechaHora">
									<fb:control>
										<Select
										id="slSupplierName"
										change="onSelectChange"
										forceSelection="true"
										items="{
                                                    path: '/ProductSuppliers'
                                                }">
										<core:Item key="{key}" text="{name}"/>
										</Select>
									</fb:control>				
								</fb:FilterItem>
                                <fb:FilterItem name="Aprobado por" label="AprobadoPor">
									<fb:control>
										<Select
										id="slSupplierNameD"
										change="onSelectChange"
										forceSelection="true"
										items="{
                                                    path: '/ProductSuppliers'
                                                }">
										<core:Item key="{key}" text="{name}"/>
										</Select>
									</fb:control>				
								</fb:FilterItem>
                                <fb:FilterItem name="Estado" label="Estado">
									<fb:control>
										<Select
										id="slSupplierNameE"
										change="onSelectChange"
										forceSelection="true"
										items="{
                                                    path: '/ProductSuppliers'
                                                }">
										<core:Item key="{key}" text="{name}"/>
										</Select>
									</fb:control>				
								</fb:FilterItem>
							</fb:filterItems>
						</fb:FilterBar>
					</f:content>
                </f:DynamicPageHeader>
            </f:header>
            <f:content>
                <Table id="idProductsTable" sticky="HeaderToolbar,ColumnHeaders" inset="false" items="Proof" class="sapFDynamicPageAlignContent" width="auto">
                    <headerToolbar>
                        <Toolbar>
                            <Title text="Products" level="H2"/>
                            <ToolbarSpacer/>
                            <Button class="myPrimaryBtn" text="{i18n>HelloWorld}" press="onSayHello"/>
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
                            <Text text="Autorizaciones de Tiempos" />
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
                            <Text text="Tipo" />
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
                            <Text text="Fecha / Hora" />
                        </Column>
                        <Column width="auto" hAlign="End">
                            <Text text="Estado" />
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
                            <Text text="Aprobado por" />
                        </Column>
                        <Column minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
                            <Text text="Estado" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <ObjectIdentifier title="Ricardo MillÃ¡n "/>
                                <Text text="Vacaniones" />
                                <Text text="21/01/2022" />
                                <ObjectStatus text="Aprobado" state="Success" />
                                <Text text="Benito Camelas" />
                                <ObjectStatus text="Pendiente" state="Warning" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </f:content>
            <!-- DynamicPage Footer -->
            <f:footer>
                <Toolbar>
                    <Button text="{/messagesLength}" />
                    <ToolbarSpacer/>
                    <Button type="Accept" text="Accept"/>
                    <Button type="Reject" text="Reject"/>
                </Toolbar>
            </f:footer>
        </f:DynamicPage>
    </App>    
</mvc:View>