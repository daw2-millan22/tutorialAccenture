<mvc:View
    controllerName="tutorial1.controller.View2" 
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:table="sap.ui.table"
>
  
    <Page id="page" title="{i18n>title}">
        <content>
            <table:Table id="_IDGenTable1" rows="{CitiesModel>/}" items="{CitiesModels>/}">
                <table:columns>
                    <table:Column
                    id="name"
                    sortProperty="name" filterProperty="name">
                    <Label id="_IDGenLabel2" text="City Name"/>
                    <table:template>
                        <Text id="_IDGenText2" text="{CitiesModel>name}" wrapping="false"></Text>
                    </table:template>
                    </table:Column>
                    <table:Column
                    id="population"
                    sortProperty="population" filterProperty="population">
                    <Label id="_IDGenLabel1" text="population"/>
                    <table:template>
                        <Text id="_IDGenText1" text="{path: 'CitiesModel>population', formatter: '.Formatter.formatPopulation'}" wrapping="false"></Text>
                    </table:template>
                    </table:Column>
                </table:columns>
               
            </table:Table>
             <!--<items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{CitiesModel>name}"/>
                            <Text text="{path: 'CitiesModel>population', formatter:'.formatPopulation'}"/>
                        </cells>
                    </ColumnListItem>
                </items>-->
         </content>
    </Page>

</mvc:View>